{
  "name": "vscode-amplifier",
  "displayName": "Amplifier",
  "description": "Use Amplifier as a language model in VSCode Chat",
  "version": "0.1.0",
  "publisher": "amplifier",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vscode-amplifier"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "enabledApiProposals": [
    "chatProvider"
  ],
  "activationEvents": [
    "onLanguageModelChatProvider:amplifier"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languageModelChatProviders": [
      {
        "vendor": "amplifier",
        "displayName": "Amplifier"
      }
    ],
    "commands": [
      {
        "command": "amplifier.setApiKey",
        "title": "Amplifier: Set API Key"
      },
      {
        "command": "amplifier.clearApiKey",
        "title": "Amplifier: Clear API Key"
      }
    ],
    "configuration": {
      "title": "Amplifier",
      "properties": {
        "amplifier.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python executable with amplifier-foundation installed. Uses system PATH if not specified."
        },
        "amplifier.provider": {
          "type": "string",
          "enum": ["anthropic", "openai", "azure"],
          "default": "anthropic",
          "description": "LLM provider to use (Anthropic, OpenAI, or Azure)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
